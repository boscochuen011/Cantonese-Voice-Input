{
  "manifest_version": 3,
  "name": "Cantonese Speak & Insert",
  "description": "One-tap Cantonese voice typing and auto-insert for Chrome.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open Speak & Insert"
  },
  "side_panel": {
    "default_path": "panel.html"
  }
}
